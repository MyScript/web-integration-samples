{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "no-unused-vars" : "off",
    "comma-dangle" : "off",
    "no-plusplus" : "off",
    "no-restricted-properties" : "off",
    "prefer-template" : "off",
    "import/no-extraneous-dependencies" : "off",
    "import/prefer-default-export" : "off",
    "max-len": ["off", 100, 2, {
      "ignoreUrls": true,
      "ignoreComments": false,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }]
  },
  "globals": {
    "document": true,
    "window": true,
    "Blob": true,
    "FileReader": true
  }
}
